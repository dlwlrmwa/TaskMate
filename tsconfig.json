{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(tabs)/**/*.jsx", // Added for new tabs structure
    "app/(tabs)/**/*.tsx", // Added for new tabs structure
    "app/(auth)/**/*.jsx", // Added for new auth structure
    "app/(auth)/**/*.tsx"  // Added for new auth structure
  ]
}